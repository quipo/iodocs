        - if (apiInfo.name)
            - var title = apiInfo.name + ' API Documentation'
        -else
            - var title = 'Live Documentation'
        title=title
        link(rel='stylesheet', href='/stylesheets/prettify.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/datasift.css')

    body
        div(id='header')
           div(id='bar')
               h1(id='logo')
                   a(href='/')
                       Datasift

        div(id='section')
            !{body}
